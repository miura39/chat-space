.chat-main
  .chat-main__group-info
    .chat-main__group-info__group-name
      = @group.name
      .chat-main__group-info__member
        - @group.group_users.each do |group|
          =group.user.name
    .chat-main__group-info__edit
      = link_to "Edit" , edit_group_path(@group.id)
  .chat-main__message-list
    = render @messages
  .chat-main__message-form  
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'new_message__message', placeholder: 'type a message'
      = f.label :image, class: 'new_message__image' do
        = icon('fa', 'image')
        = f.file_field :image, class: 'new_message__image__label'
      = f.submit 'Send', class: 'new_message__form__send'
