.chat-main__message-lists{data: {message_id: message.id}}
  .chat-main__message-lists__name
    = message.user.name
    .chat-main__message-lists__name__time
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")         
  .chat-main__message-lists__message
    - if message.content.present?
      %p.chat-main__message-lists__message__content
      = message.content
    = image_tag message.image.url, class: 'chat-main__message-list__message' if message.image.present?